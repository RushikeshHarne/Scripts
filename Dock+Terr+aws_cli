#!/bin/bash
# docker . Terraform , AWS CLI
# Function to install Docker on Linux
install_docker_linux() {
  echo "Installing Docker on Linux..."
  sudo apt update
  sudo apt install -y ca-certificates curl gnupg lsb-release
  sudo mkdir -p /etc/apt/keyrings
  curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo gpg --dearmor -o /etc/apt/keyrings/docker.gpg
  echo \
    "deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/docker.gpg] \
    https://download.docker.com/linux/ubuntu $(lsb_release -cs) stable" | \
    sudo tee /etc/apt/sources.list.d/docker.list > /dev/null
  sudo apt update
  sudo apt install -y docker-ce docker-ce-cli containerd.io docker-buildx-plugin docker-compose-plugin
}

# Function to install Terraform on Linux
install_terraform_linux() {
  echo "Installing Terraform on Linux..."
  sudo apt update && sudo apt install -y gnupg software-properties-common curl
  curl -fsSL https://apt.releases.hashicorp.com/gpg | sudo gpg --dearmor -o /usr/share/keyrings/hashicorp-archive-keyring.gpg
  echo "deb [signed-by=/usr/share/keyrings/hashicorp-archive-keyring.gpg] https://apt.releases.hashicorp.com $(lsb_release -cs) main" | \
    sudo tee /etc/apt/sources.list.d/hashicorp.list
  sudo apt update && sudo apt install -y terraform
}

# Function to install AWS CLI on Linux
install_awscli_linux() {
  echo "Installing AWS CLI on Linux..."
  curl "https://awscli.amazonaws.com/awscli-exe-linux-x86_64.zip" -o "awscliv2.zip"
  unzip awscliv2.zip
  sudo ./aws/install
  rm -rf aws awscliv2.zip
}

# Function for macOS installation
install_mac() {
  echo "Installing tools on macOS using Homebrew..."
  brew install --cask docker
  brew install terraform awscli
}

# Function for WSL
install_wsl() {
  echo "Detected Windows Subsystem for Linux (WSL)"
  install_docker_linux
  install_terraform_linux
  install_awscli_linux
}

# Detect OS
OS="$(uname -s)"

case "$OS" in
  Linux*)
    if grep -qi microsoft /proc/version; then
      install_wsl
    else
      install_docker_linux
      install_terraform_linux
      install_awscli_linux
    fi
    ;;
  Darwin*)
    install_mac
    ;;
  *)
    echo "Unsupported OS: $OS"
    ;;
esac

echo "âœ… Installation complete!"
